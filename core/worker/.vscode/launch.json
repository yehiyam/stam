{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "app",
            "outputCapture": "std",
            "program": "${workspaceRoot}/app.js",
            "env": {
                "ALGORITHM_TYPE": "green-alg",
                "WORKER_SOCKET_PORT": "19876",
                // "POD_ID": "MY_POD_ID",
                "BASE_LOGS_PATH": "${workspaceRoot}",
                // "REDIS_SENTINEL_SERVICE_HOST": "10.233.26.195",
                // "REDIS_SENTINEL_SERVICE_PORT": "26379"
            }
        },
        {
            "name": "Run mocha",
            "request": "launch",
            "type": "node",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "outputCapture": "std",
            "env": {
                "NODE_ENV": "test"
            },
            "args": [
                "test"
            ],
            "runtimeExecutable": null
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${file}"
        }
    ]
}